{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "{{ Title }}",
      "size": "Large",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "{{ Subheading }}",
      "size": "Medium",
      "weight": "Lighter",
      "wrap": true
    },
    {
      "type": "ImageSet",
      "imageSize": "medium",
      "images": [
        {
          "type": "Image",
          "url": "{{ BackgroundImage }}"
        }
      ]
    }
  ]
}